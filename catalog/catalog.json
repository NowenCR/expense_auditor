{
  "version": "1.5.3",
  "allowlist_merchants": [
    "UBER *TRIP",
    "MICROSOFT",
    "AMAZON WEB SERVICES"
  ],
  "allowlist_patterns": [
    {
      "pattern": "(?i).*walmart.*",
      "reason": "Walmart Permitido Siempre (Regla Maestra)"
    },
    {
      "pattern": "(?i).*(airline|airways|air\\s*lines|air\\s*carriers|aero|aviation|fly|flight|delta\\s*air|united\\s*air|american\\s*air|southwest|latam|avianca|aeromexico|volaris|copa|iberia|british\\s*air|air\\s*france|lufthansa|klm|emirates|qatar|etihad).*",
      "reason": "Aerolíneas y Viajes en Avión (Permitido Siempre)"
    },
    {
      "pattern": "(?i)^(?!.*disney).*(hotel|inn|lodging|motel|resort|marriott|courtyard|fairfield|residence\\s*inn|hilton|doubletree|hampton|hyatt|westin|sheraton|holiday\\s*inn|comfort\\s*inn|candlewood|delta\\s*hotels|days\\s*inn|americinn|best\\s*western).*",
      "reason": "Hoteles y Alojamiento permitidos (Excluyendo Disney)"
    },
    {
      "pattern": "(?i).*(restaurant|restaurante|grill|kitchen|diner|cafe|bistro|pizza|taco|sushi|burger|bbq|cantina|food|coffee|bakery|deli|sandwich|panini).*",
      "reason": "Establecimientos de comida/restaurantes (Permitido aunque diga Bar)"
    },
    {
      "pattern": "(?i)^(?!.*(topgolf|dave\\s*&\\s*buster|main\\s*event|bowlero|amf|lucky\\s*strike|round1|pinstripes|chuck\\s*e\\.?\\s*cheese|gameworks|arcade)).*eating\\s+and\\s+drinking\\s+places.*",
      "reason": "Eating and Drinking Places (Permitido SOLO si NO es venue de entretenimiento)"
    }
  ],
  "disallowed_keywords": [],
  "mcc_description_rules": [
    {
      "pattern": "(?i)BAR,\\s*LOUNGE,\\s*DISCO,\\s*NIGHTCLUB,\\s*TAVERN.*ALCOHOLIC\\s*DRINKS",
      "severity": "DIRECT_WARN",
      "reason": "MCC Description: Bar/Alcohol Puro (5813)"
    },
    {
      "pattern": "(?i)digital\\s+goods",
      "severity": "DIRECT_WARN",
      "reason": "Bienes Digitales / Suscripciones"
    }
  ],
  "purchase_category_rules": [
    {
      "category": "Entertainment",
      "severity": "DIRECT_WARN",
      "reason": "Entretenimiento General"
    }
  ],
  "mcc_rules": [
    {
      "mcc": "7995",
      "severity": "DIRECT_WARN",
      "reason": "Apuestas / Gambling"
    }
  ],
  "keyword_rules": [
    {
      "pattern": "(?i)netflix|hbo|hulu|disney\\+|disney\\s*plus|paramount|apple\\s*tv|spotify|youtube|twitch|crunchyroll|peacock",
      "severity": "DIRECT_WARN",
      "reason": "Streaming / Suscripción Detectada"
    },
    {
      "pattern": "(?i)ticketmaster|axs|seatgeek|stubhub",
      "severity": "DIRECT_WARN",
      "reason": "Venta de Boletos / Tickets"
    },
    {
      "pattern": "(?i)nfl|nba|mlb|nhl|fifa|uefa|premier\\s*league|la\\s*liga|liga\\s*mx|cowboys|raiders|yankees|fc\\s*barcelona|real\\s*madrid|manchester",
      "severity": "DIRECT_WARN",
      "reason": "Deportes (Ligas/Equipos)"
    },
    {
      "pattern": "(?i)apple\\.com/bill",
      "severity": "DIRECT_WARN",
      "reason": "APPLE.COM/BILL (Suscripción/Digital)"
    },
    {
      "pattern": "(?i)amazon|ebay|aliexpress|temu|shein|mercado\\s*libre",
      "severity": "DIRECT_WARN",
      "reason": "E-commerce / Marketplace (Posible uso personal)"
    },
    {
      "pattern": "(?i)topgolf|dave\\s*&\\s*buster|main\\s*event|bowlero|amf|lucky\\s*strike|round1|pinstripes|chuck\\s*e\\.?\\s*cheese|gameworks",
      "severity": "DIRECT_WARN",
      "reason": "Entretenimiento disfrazado de comida (Topgolf, Arcade, Bowling)"
    },
    {
      "pattern": "(?i)disney",
      "severity": "DIRECT_WARN",
      "reason": "Disney Detectado (No permitido)"
    }
  ],
  "amount_rules": [
    {
      "scope": "global",
      "min_amount": 2000.0,
      "severity": "POSSIBLE_WARN",
      "reason": "Monto alto global (>=2000)"
    }
  ]
}