{
  "version": "1.4.0",
  "allowlist_merchants": [
    "UBER *TRIP",
    "MICROSOFT",
    "AMAZON WEB SERVICES"
  ],
  "allowlist_patterns": [
    {
      "pattern": "(?i)^(?!.*disney).*(hotel|motel|inn|suites|resort).*",
      "reason": "Hoteles/Alojamiento permitidos (Excluyendo Disney)"
    },
    {
      "pattern": "(?i).*(bar|pub|lounge).*(restauran|grill|kitchen|food|pizza|tacos|sushi).*",
      "reason": "Bar que también es Restaurante/Comida (Permitido)"
    },
    {
      "pattern": "(?i).*(restauran|grill|kitchen|food|pizza|tacos|sushi).*(bar|pub|lounge).*",
      "reason": "Restaurante que también es Bar (Permitido)"
    }
  ],
  "disallowed_keywords": [],
  "mcc_description_rules": [
    {
      "pattern": "(?i)digital\\s+goods",
      "severity": "DIRECT_WARN",
      "reason": "Bienes Digitales / Suscripciones"
    },
    {
      "pattern": "(?i)utilities|electric|gas|water|sanitary",
      "severity": "POSSIBLE_WARN",
      "reason": "Servicios Públicos (Revisar)"
    }
  ],
  "purchase_category_rules": [
    {
      "category": "Entertainment",
      "severity": "DIRECT_WARN",
      "reason": "Entretenimiento General"
    }
  ],
  "mcc_rules": [
    {
      "mcc": "7995",
      "severity": "DIRECT_WARN",
      "reason": "Apuestas / Gambling"
    },
    {
      "mcc": "4900",
      "severity": "POSSIBLE_WARN",
      "reason": "Utilities / Servicios Públicos"
    }
  ],
  "keyword_rules": [
    {
      "pattern": "(?i)apple\\s*com\\s*bill|apple\\.com",
      "severity": "DIRECT_WARN",
      "reason": "APPLE COMBILL (Tolerancia Cero)"
    },
    {
      "pattern": "(?i)amazon(?!.*web\\s*services)|ebay|aliexpress|temu|shopify|mercado\\s*libre|shein",
      "severity": "DIRECT_WARN",
      "reason": "Compras Online (Retail)"
    },
    {
      "pattern": "(?i)netflix|hbo|hulu|disney\\s*plus|disney\\+|spotify|apple\\s*tv|prime\\s*video|roku|youtube",
      "severity": "DIRECT_WARN",
      "reason": "Suscripción / Streaming"
    },
    {
      "pattern": "(?i)nfl|nba|mlb|nhl|fifa|uefa|chicago\\s*bears|lakers|bulls|yankees|cowboys|49ers|patriots",
      "severity": "DIRECT_WARN",
      "reason": "Deportes Profesionales / Equipos"
    },
    {
      "pattern": "(?i)ticketmaster|stubhub|seatgeek|vividseats|ticketing|box\\s*office|eventbrite",
      "severity": "DIRECT_WARN",
      "reason": "Tickets / Entradas a eventos"
    },
    {
      "pattern": "(?i)golf|pga\\b|country\\s*club|green\\s*fee|driving\\s*range",
      "severity": "POSSIBLE_WARN",
      "reason": "Golf / Country Club (Investigar)"
    },
    {
      "pattern": "(?i)disney|resort\\s*world",
      "severity": "DIRECT_WARN",
      "reason": "Disney (Hoteles/Parques no permitidos)"
    },
    {
      "pattern": "(?i)bar\\b|lounge|nightclub|pub\\b|liquor|alcohol|beer|wine|tavern",
      "severity": "DIRECT_WARN",
      "reason": "Alcohol / Vida Nocturna (Sin referencia a comida)"
    },
    {
      "pattern": "(?i)water|electric|power|gas\\b|energy|cfe\\b|comision\\s*federal|agua",
      "severity": "POSSIBLE_WARN",
      "reason": "Pago de Servicios (Agua/Luz/Gas)"
    },
    {
      "pattern": "(?i)casino|bet|gambling|stake|sportsbook",
      "severity": "DIRECT_WARN",
      "reason": "Apuestas / Casino"
    },
    {
      "pattern": "(?i)spa\\b|massage|sauna",
      "severity": "DIRECT_WARN",
      "reason": "Spa y Masajes"
    },
    {
      "pattern": "(?i)clock|jewelry|watch|silverware|rolex|gucci|vuitton",
      "severity": "DIRECT_WARN",
      "reason": "Joyería / Lujo"
    },
    {
      "pattern": "(?i)tinder|bumble|match\\.com|dating",
      "severity": "DIRECT_WARN",
      "reason": "Apps de Citas"
    },
    {
      "pattern": "(?i)gift\\s*card|giftcard",
      "severity": "POSSIBLE_WARN",
      "reason": "Posible gift card"
    }
  ],
  "amount_rules": [
    {
      "scope": "global",
      "min_amount": 2000.0,
      "severity": "POSSIBLE_WARN",
      "reason": "Monto alto global (>=2000) - Revisión genérica"
    }
  ]
}